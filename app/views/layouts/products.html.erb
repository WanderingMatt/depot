</head>
<body>
  <div id="wrapper">
    <div id="header" class="container_16">
      <h1 class="grid_12"><%= site_name %></h1>
      <em class="grid_4">Admin</em>
    </div>
    <div id="content" class="container_16 rounded_10">
      <p style="color: green"><%= flash[:notice] %></p>
      <%= yield %>
